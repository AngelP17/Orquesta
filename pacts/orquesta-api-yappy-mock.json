{
  "consumer": {
    "name": "orquesta-api"
  },
  "interactions": [
    {
      "description": "a payment creation request",
      "providerStates": [
        {
          "name": "Yappy accepts payment requests"
        }
      ],
      "request": {
        "body": {
          "amount_cents": "142500",
          "currency": "PAB",
          "payment_intent_id": "pi_1001",
          "seller_id": "s_001"
        },
        "headers": {
          "Authorization": "Bearer token",
          "Content-Type": "application/json"
        },
        "matchingRules": {
          "body": {
            "$.amount_cents": {
              "combine": "AND",
              "matchers": [
                {
                  "match": "regex",
                  "regex": "^\\d+$"
                }
              ]
            },
            "$.currency": {
              "combine": "AND",
              "matchers": [
                {
                  "match": "regex",
                  "regex": "^(PAB|USD)$"
                }
              ]
            },
            "$.payment_intent_id": {
              "combine": "AND",
              "matchers": [
                {
                  "match": "type"
                }
              ]
            },
            "$.seller_id": {
              "combine": "AND",
              "matchers": [
                {
                  "match": "type"
                }
              ]
            }
          },
          "header": {
            "Authorization": {
              "combine": "AND",
              "matchers": [
                {
                  "match": "regex",
                  "regex": "^Bearer\\s.+$"
                }
              ]
            }
          }
        },
        "method": "POST",
        "path": "/v2/payments"
      },
      "response": {
        "body": {
          "id": "yap_ext_123",
          "qr_code": "EMVQR:payload",
          "status": "processing"
        },
        "headers": {
          "Content-Type": "application/json"
        },
        "matchingRules": {
          "body": {
            "$.id": {
              "combine": "AND",
              "matchers": [
                {
                  "match": "type"
                }
              ]
            },
            "$.qr_code": {
              "combine": "AND",
              "matchers": [
                {
                  "match": "type"
                }
              ]
            },
            "$.status": {
              "combine": "AND",
              "matchers": [
                {
                  "match": "regex",
                  "regex": "^(processing|succeeded|failed)$"
                }
              ]
            }
          }
        },
        "status": 200
      }
    }
  ],
  "metadata": {
    "pact-js": {
      "version": "14.0.0"
    },
    "pactRust": {
      "ffi": "0.4.28",
      "models": "1.3.5"
    },
    "pactSpecification": {
      "version": "3.0.0"
    }
  },
  "provider": {
    "name": "yappy-mock"
  }
}