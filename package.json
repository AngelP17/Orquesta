{
  "name": "orquesta",
  "private": true,
  "scripts": {
    "dev:dashboard": "pnpm --filter @orquesta/platform-dashboard dev",
    "dev:portal": "pnpm --filter @orquesta/seller-portal dev",
    "dev:api": "pnpm --filter @orquesta/api dev",
    "dev:yappy-mock": "pnpm --filter @orquesta/yappy-mock dev",
    "dev:paycaddy-mock": "pnpm --filter @orquesta/paycaddy-mock dev",
    "dev:frontend": "pnpm --filter @orquesta/platform-dashboard dev",
    "dev:integrated": "pnpm --filter @orquesta/platform-dashboard dev",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "test": "jest --coverage",
    "test:unit": "jest tests/unit --coverage",
    "test:integration": "jest tests/integration --runInBand",
    "test:contract": "jest tests/contract --runInBand",
    "test:e2e": "playwright install chromium && playwright test",
    "test:mutation": "stryker run"
  },
  "devDependencies": {
    "@pact-foundation/pact": "^14.0.0",
    "@playwright/test": "^1.50.0",
    "@stryker-mutator/core": "^8.7.1",
    "@stryker-mutator/jest-runner": "^8.7.1",
    "@testcontainers/postgresql": "^10.15.0",
    "@types/jest": "^29.5.14",
    "@types/pg": "^8.11.14",
    "@types/supertest": "^6.0.3",
    "fast-check": "^3.23.2",
    "jest": "^29.7.0",
    "pg": "^8.16.3",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.4.0"
  },
  "packageManager": "pnpm@9.1.0",
  "engines": {
    "node": ">=20.0.0"
  }
}
